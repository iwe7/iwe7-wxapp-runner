.map_container {
    width: 100%;
    position: relative;
    z-index: 1;
    overflow: hidden;
    background-color: #efefef;
}

.map_container .map {
    width: 100%;
    min-width: 100%;
}

.post_form {
    background-color: #efefef;
    display: flex;
    min-height: 200rpx;
    height: 200px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.form_row {
    margin: 5px 0px;
    display: flex;
    flex-direction: row;
    align-items: center;
    line-height: 34px;
    min-height: 34px;
    padding: 0 10px;
}

.form_row .icon {
    width: 60rpx;
    height: 53rpx;
}

.form_row input, .form_row textarea {
    width: 100%;
    font-size: 14px;
    color: gray;
    padding-left: 10px;
}

.finish {
    position: absolute;
    left:5px;
    top: 1px;
    padding: 5px;
    padding-left: 0px;
    padding-right: 0px;
}

.next {
    position: absolute;
    right: 5px;
    top: 1px;
    padding: 5px;
}

.post_form_tab_item {
    padding: 5px 10px;
}

.post_form_tab_item.active {
    color: red;
}

.post_form_title {
    display: block;
    text-align: center;
    font-size: 14px;
    font-weight: bold;
}

.post_form_desc {
    font-size: 12px;
    text-align: center;
    color: gray;
    display: block;
}

.map_opt {
    margin-top: 5px;
    padding: 0 10px;
    font-size: 10px;
    color: gray;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.map_opt image, .map_opt cover-view {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.main_flex{
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
}
.main_flex .map_container{
    flex: 1;
    min-height: 200rpx;
}

page{
    background-image: #efefef;
}

.form_btns{
    display: flex;
    flex-direction: row;
}
.form_btns button{
    flex: 1;
}